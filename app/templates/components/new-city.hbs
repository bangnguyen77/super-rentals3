<button {{action 'cityShow'}}>New City</button>
{{#if isNewCityShowing}}
  <h1>New City</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="country">Country</label>
        {{input value=country id="country"}}
      </div>

      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
{{/if}}
